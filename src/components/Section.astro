---
const { title } = Astro.props;
---

<section>
  {title && <h2>{title}</h2>}
  <slot />
</section>

<style>
  section {
    max-width: 70rem;
    margin: 0 auto 7.2rem;
  }

  h2 {
    margin-bottom: 0.8rem;
    font-weight: 700;
    line-height: 1.5;
    font-size: 2.4rem;
  }

  @media (width <= 700px) {
    section {
      margin-bottom: 38px;
    }
  }
</style>
